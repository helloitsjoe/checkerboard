{
    "name": "checkerboard",
    "version": "1.0.0",
    "description": "Based on checkerboard programming test https://github.com/golgobot/programming-challenge",
    "main": "main.js",
    "config": {
        "watch": "src",
        "app": "src/index.ts",
        "bundle": "index.js",
        "map": "index.js.map"
    },
    "scripts": {
        "start": "node_modules/.bin/electron .",
        "watch": "node_modules/.bin/webpack --watch",
        "build": "node_modules/.bin/webpack",
        "test:ts": "node_modules/.bin/mocha -r ts-node/register test/index.js",
        "test": "node_modules/.bin/floss --path test/index.js",
        "test:debug": "npm run test -- --debug"
    },
    "browserify": {
        "transform": []
    },
    "author": "Joe Boyle",
    "license": "private",
    "devDependencies": {
        "electron": "^15.5.5",
        "floss": "^2.1.5",
        "mocha": "^5.2.0",
        "ts-loader": "^4.4.2",
        "ts-node": "^7.0.0",
        "typescript": "^2.9.2",
        "webpack": "^4.14.0",
        "webpack-cli": "^3.0.8",
        "webpack-node-externals": "^1.7.2"
    },
    "build": {
        "appId": "checkerboard",
        "category": "test"
    },
    "dependencies": {
        "pixi-animate": "^1.3.3",
        "pixi.js": "^4.3.0"
    }
}
